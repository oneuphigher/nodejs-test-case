<body>
	<div class="col-md-6">
		<form action="/createtransaction" method="POST">
		
		 <h1>Transactions page</h1>
			<input type="hidden" name="token" value="<%=token%>">
            <input type="hidden" name="username" value="<%=username%>"> 
            <input type="hidden" name="customerProfileId" value="<%=customerProfileId%>">
			<div class="form-group">
				<label for="numeric" class="control-label">AMOUNT</label> <input
					id="amount" type="text" name="amount" class="input form-control" size="6"
					maxlength="6" data-numeric />
			</div>
			<div class="form-group">
				<label for="numeric" class="control-label">CURRENCY</label> <input
					id="currency" name="currency" type="text" class="input form-control" size="6"
					maxlength="6" data-numeric />
			</div>
			<div class="form-group">
				<label for="cc-number" class="control-label">CARD NUMBER<small
					class="text-muted"> </small>
				</label> 
				<input type="text" name="customerid" id="cardnumber" value="<%=customerCardId%>" size="20" maxlength="20"
					class="input form-control" autocomplete="cc-number"
					placeholder="••••••••••••••••" required />
			</div>
			<div class="form-group">
				<label for="cc-cvc" class="control-label">CVC</label> <input
					type="number" name="cvc" id="cvc" class="input form-control cc-cvc"
					autocomplete="off" size="3" maxlength="3" placeholder="•••"
					required />
			</div>

			<div class="form-group">
				<label for="cc-exp" class="control-label">EXPIRATION</label> <label>DATE</label>
				
				
				<input
					id="cc-exp" type="number" name="cardexpirymonth" id="card-expiry-month" value="<%=custcardexpirymonth%>"
					class="input form-control-expdateyr cc-expMon" placeholder="MM"
					required /> <label>YEAR</label> 
					
					<input type="number" name="cardexpiryyear" id="card-expiry-year" value="<%=custcardexpiryyear%>" class="input form-control-expdateyr cc-expYr"
					placeholder="YYYY" required />
			</div>
			
		
			<button type="submit" class="btn btn-lg btn-primary">PAY</button>
	
		</form>
	</div>
</body>
</html>



